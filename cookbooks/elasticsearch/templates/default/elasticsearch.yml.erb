
###############################  elasticsearch.yml config  #######################################    



########### The cluster name should be same for all instances to make it sync with each other, 
#                      also they should operate in same network.            #####################

 
cluster.name: <%= node['elasticsearch']['cluster_name'] %>

 
############  AWS doesn't support Multicasting. Specify each as a Unicast host  ##################
 

discovery.zen.ping.multicast.enabled: <%= node['elasticsearch']['multicast']['enabled'] %>
discovery.zen.ping.unicast.hosts: <%= node['elasticsearch']['unicast_hosts'] %>
  

#######################  Shard defines the split factor. Default is '5'  ##########################


index.number_of_shards: <%= node['elasticsearch']['number_of_shards'] %>
index.number_of_replicas: <%= node['elasticsearch']['number_of_replicas'] %>

http.cors.allow-origin: "<%= node['elasticsearch']['cors']['allow-origin'] %>"
http.cors.enabled: <%= node['elasticsearch']['cors']['enabled'] %>   


